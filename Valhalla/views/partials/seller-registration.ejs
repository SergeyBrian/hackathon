<div class="modal fade right" id="modalRegistrationSeller" tabindex="-1" role="dialog" aria-labelledby="modalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Seller</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h1>Войдите в свой аккаунт или создайте новый!</h1>
                <input type="checkbox" checked data-toggle="toggle" data-width="150" data-on="Регистрация" data-off="Вход" id="register-toggle"
                       data-onstyle="outline-secondary" data-offstyle="outline-success">
                <div id="registration-content" class="container">
                    <form method="post" action="/registration">
                        <div id="user-info">
                            <div class="row">
                                <label class="col-sm"><b>Имя</b> <br><input type="text" id="name"></label>
                                <label class="col-sm"><b>Фамилия</b> <br><input type="text" id="name"></label>
                            </div>
                            <div class="row">
                                <label class="col-sm"><b>Отчество</b> <br><input type="text" id="name"></label>
                            </div>
                            <div class="row">
                                <label class="col-sm">Паспорт <br><input type="text" id="name"></label>
                                <label class="col-sm">Название бизнеса <br><input type="text" id="name"></label>

                            </div>
                            <div class="row">
                                <label class="col-sm">Описание <br><textarea id="name"></textarea></label>
                                <label class="col-sm">Адрес <br><input placeholder="Здесь будет карта" type="text" id="name"></label>
                            </div>
                            <br>
                            <button class="btn btn-dark btn-lg download-button btn-danger" id="register-button" type="submit">Создать аккаунт</button>
                        </div>
                        <div id="login-buttons" class="hidden">
                            <script type="text/javascript" src="https://vk.com/js/api/openapi.js?168"></script>
                            <script type="text/javascript">
                                VK.init({apiId: 7639689});
                            </script>

                            <!-- VK Widget -->
                            <div id="vk_auth"></div>
                            <script type="text/javascript">
                                VK.Widgets.Auth("vk_auth", {"authUrl":"/dev/Login"});
                            </script>
                        </div>
                    </form>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#register-toggle').on('change', () => {
        $('#user-info').toggleClass('hidden');
        $('#login-buttons').toggleClass('hidden');
    });
</script>


